@model IEnumerable<Category>
@{
}
@{
    ViewData["Title"] = "Category Page";
}
    <div class="container p-3">
        <div class="row">
            <div class="col-md-6 col-sm-12 text-lg-start text-sm-center">
                <h2 class="text-primary">Category List</h2>
            </div>
            <div class="col-md-6 col-sm-12 text-lg-end text-sm-center">
                <a asp-controller="Category" asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
                </a>
            </div>
        </div> <br />
     

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.DisplayOrder
                </td>
            </tr>
        }
        </tbody>
    </table>
    </div>